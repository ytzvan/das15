 <div class="box box-success">
            <div class="box-header">
              <i class="fa fa-comments-o"></i>

              <h3 class="box-title">Menciones</h3>

              <div class="box-tools pull-right" data-toggle="tooltip" title="Status">
                <div class="btn-group" data-toggle="btn-toggle">
                  <button type="button" class="btn btn-default btn-sm active"><i class="fa fa-square text-green"></i>
                  </button>
                  <button type="button" class="btn btn-default btn-sm"><i class="fa fa-square text-red"></i></button>
                </div>
              </div>
            </div>
            <div class="box-body chat" id="chat-box2">
              <!-- chat item -->

              <!-- /.item -->
              <!-- chat item -->
             
              <!-- /.item -->
              <!-- chat item -->

              <% for (menciones in m) { %>
              <div class="item">
                <img src="<%= m[menciones].user.profile_image_url %>" alt="user image" class="offline">

                <p class="message">
                  <a href="#" class="name">
                    <small class="text-muted pull-right"><button type="button" class="btn btn-primary btn-md btn-flat pull-right" data-toggle="modal" data-target="#denuncia<%= menciones %>">Crear Denuncia</button></small>

                    <%= m[menciones].user.name %> | @<%= m[menciones].user.screen_name %> <small class="text-muted"><i class="fa fa-clock-o"></i> 5:30</small>
                  </a> 
                  <br>
                   <%= m[menciones].text %>
                </p>
                <!-- Modal -->
                <div class="modal fade" id="denuncia<%= menciones %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Crear Denuncia</h4>
                      </div>
                      <div class="modal-body">

                                    <!-- Input addon -->
                      <form method="POST" action="/denuncias/add">              
                      <div class="box box-info">
                        <div class="box-body">
                          <input type="hidden" class="form-control" placeholder="Username" value="<%= m[menciones].user.screen_name %>" name="reporterHandle">
                          <h4>Reportado por: </h4>
                          <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input type="text" name="reporterName" class="form-control" placeholder="Username" value="<%= m[menciones].user.name %>">
                          </div>
                          <input type="hidden" class="form-control" placeholder="Username" value="<%= m[menciones].user.profile_image_url %>" name="reporterPicture">
                            <input type="hidden" class="form-control" placeholder="Username" value="<%= m[menciones].user.id %>" name="reporterID">
                          <h4>Denuncia: </h4>
                          <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-bullhorn"></i></span>
                            <input type="text" class="form-control" placeholder="Username" value="<%= m[menciones].text %>" name="text">
                          </div>
                          <h4>Categoria: </h4>
                          <div class="form-group">
                            <select  name="category" class="form-control">
                              <option value="1">Tránsito</option>
                              <option value="2">Ruido</option>
                              <option value="3">Seguridad</option>
                              <option value="4">Contaminación</option>
                              <option value="5">Inclusión</option>
                            </select>
                          </div>
                            <input type="hidden" class="form-control" value="<%= m[menciones].created_at %>" name="date" placeholder="Date">

                            <input type="hidden" class="form-control" placeholder="Username" value="<%= m[menciones].id %>" name="TweetID">

                            <input type="hidden" class="form-control" placeholder="Username" value="<%= m[menciones].id_str %>" name="TweetID_str">
                            <input type="hidden" class="form-control" placeholder="Username" value="<%= m[menciones].user.followers_count %>" name="followersCount">

                            <input type="hidden" class="form-control" placeholder="Username" value="<%= m[menciones].user.friends_count %>" name="followingCount">

                            <input type="hidden" class="form-control" placeholder="Username" value="<%= m[menciones].user.profile_banner_url %>" name="profileBanner">
                          
                          <%if (m[menciones].entities.media) { %>
              
                            <input type="hidden" class="form-control" placeholder="Username" value="<%= m[menciones].entities.media[0].media_url %>" name="TweetPhoto">
                        
                          <% } %>  
                                                  <!-- /input-group -->
                        </div>
                        <!-- /.box-body -->
                      </div>
                     


                      </div>
                      <div class="modal-footer">
                        <input type="submit" class="btn btn-primary">
                      </div>
                       </form>
                    </div>
                  </div>
                </div>
                <%if (m[menciones].entities.media) { %>
                
                <div class="attachment">
                  <a class="btn btn-primary" role="button" data-toggle="collapse" href="#<%= m[menciones].id %>" aria-expanded="false" aria-controls="<%= m[menciones].id %>">
                  Ver Imagen
                </a>
                <div class="collapse" id="<%= m[menciones].id %>">
                  <div class="well">
                    <div class="timeline-body">
                    <a href="#" data-toggle="modal" data-target="#myModal<%= menciones %>"><img src="<%= m[menciones].entities.media[0].media_url %>:thumb" alt="..." class="margin"></a>
                    </div>                  
                  </div>
                </div>
              </div>

              <div class="modal fade" id="myModal<%= menciones %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
              <div class="modal-dialog" role="document" id="modal-img-container" style="width: <%= m[menciones].entities.media[0].sizes.medium.w %>px;">
                <div class="modal-content">
                  <div class="modal-body">
                    <img src="<%= m[menciones].entities.media[0].media_url %>:medium" alt="..." class="">
                  </div>
                  <!-- <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                  </div> -->
                </div>
              </div>
            </div>
              <% } %>
            </div>
              <% } %>
              <!-- /.item -->
            </div><!-- /.chat -->
          </div>

          <!-- /.box (chat box) -->