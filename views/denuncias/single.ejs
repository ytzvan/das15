                <div class="col-sm-4">
                  <div class="description-block">
                    <h5 class="description-header"><%= d.followingCount %></h5>
                    <span class="description-text">Seguidos</span>
                  </div>
                  <!-- /.description-block -->
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->
            </div>
          </div>
        </div>  
    </div> <!-- EN ROW -->          